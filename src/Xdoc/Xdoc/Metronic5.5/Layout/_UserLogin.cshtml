@using Xdoc.Logic.Extensions
@using Xdoc.Logic.Services
@inject ApplicationUserManager userManager
@{
    Layout = null;

    var user = await userManager.GetClientAsync(User);

    var userAvatarLink = ""; //user.GetAvatarLink(ImageSizeType.Icon);
}

@if (User.Identity.IsAuthenticated && false)
{
    <li class="m-nav__item m-topbar__user-profile m-topbar__user-profile--img  m-dropdown m-dropdown--medium m-dropdown--arrow m-dropdown--header-bg-fill m-dropdown--align-right m-dropdown--mobile-full-width m-dropdown--skin-light" m-dropdown-toggle="click">
        <a href="#" class="m-nav__link m-dropdown__toggle">
            <span class="m-topbar__userpic">
                @if (userAvatarLink == null)
                {
                    <img src="/Metronic5.5/assets/app/media/img/users/user4.jpg" class="m--img-rounded m--marginless" alt="" />
                }
                else
                {
                    <img src="@userAvatarLink" class="m--img-rounded m--marginless" alt="" />
                }
            </span>
            <span class="m-topbar__username m--hide">@User.Identity.Name</span>
        </a>
        <div class="m-dropdown__wrapper">
            <span class="m-dropdown__arrow m-dropdown__arrow--right m-dropdown__arrow--adjust"></span>
            <div class="m-dropdown__inner">
                <div class="m-dropdown__header m--align-center" style="background: url(/Metronic5.5/assets/app/media/img/misc/user_profile_bg.jpg); background-size: cover;">
                    <div class="m-card-user m-card-user--skin-dark">
                        <div class="m-card-user__pic">
                            @if (userAvatarLink == null)
                            {
                                <img src="/Metronic5.5/assets/app/media/img/users/user4.jpg" class="m--img-rounded m--marginless" alt="" />
                            }
                            else
                            {
                                <img src="@userAvatarLink" class="m--img-rounded m--marginless" alt="" />
                            }
                        </div>
                        <div class="m-card-user__details">
                            <span class="m-card-user__name m--font-weight-500">@user.Name</span>
                            <a href="" class="m-card-user__email m--font-weight-300 m-link">@user.Email</a>
                        </div>
                    </div>
                </div>
                <div class="m-dropdown__body">
                    <div class="m-dropdown__content">
                        <ul class="m-nav m-nav--skin-light">
                            <li class="m-nav__section m--hide">
                                <span class="m-nav__section-text">Section</span>
                            </li>
                            <li class="m-nav__item">
                                <a href="/Client/Index" class="m-nav__link">
                                    <i class="m-nav__link-icon flaticon-profile-1"></i>
                                    <span class="m-nav__link-title">
                                        <span class="m-nav__link-wrap">
                                            <span class="m-nav__link-text">Мой профиль</span>
                                        </span>
                                    </span>
                                </a>
                            </li>
                            <li class="m-nav__item">
                                <a onclick="alert('Пока в разработке')" class="m-nav__link">
                                    <i class="m-nav__link-icon flaticon-share"></i>
                                    <span class="m-nav__link-text">Активность</span>
                                </a>
                            </li>
                            <li class="m-nav__item">
                                <a href="/Messaging/Index" class="m-nav__link">
                                    <i class="m-nav__link-icon flaticon-chat-1"></i>
                                    <span class="m-nav__link-text">Сообщения</span>
                                </a>
                            </li>
                            <li class="m-nav__separator m-nav__separator--fit">
                            </li>
                            <li class="m-nav__item">
                                <a onclick="alert('Пока в разработке')" class="m-nav__link">
                                    <i class="m-nav__link-icon flaticon-info"></i>
                                    <span class="m-nav__link-text">FAQ</span>
                                </a>
                            </li>
                            <li class="m-nav__item">
                                <a onclick="alert('Пока в планах, придётся решать вопросы лично')" class="m-nav__link">
                                    <i class="m-nav__link-icon flaticon-lifebuoy"></i>
                                    <span class="m-nav__link-text">Поддержка</span>
                                </a>
                            </li>
                            <li class="m-nav__separator m-nav__separator--fit">
                            </li>
                            <li class="m-nav__item">
                                <a href="/Account/LogOut" class="btn m-btn--pill    btn-secondary m-btn m-btn--custom m-btn--label-brand m-btn--bolder">Выйти</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </li>
}


